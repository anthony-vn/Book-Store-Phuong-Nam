<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up"
    android:orientation="vertical"
    tools:context=".SignUp">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_paper_plane" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/sign_up"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:hint="@string/username"
        android:textColorHint="@color/edit_text_login"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorBlack"
        app:hintTextAppearance="@style/HintText"
        app:startIconDrawable="@drawable/ic_user"
        app:startIconTint="@color/colorBlack">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/boder_edit_text"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:textColor="@color/colorBlack"
            android:textStyle="bold">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="@string/email"
        app:hintTextAppearance="@style/HintText"
        android:textColorHint="@color/edit_text_login"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorBlack"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/colorBlack">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/boder_edit_text"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:textColor="@color/colorBlack"
            android:textStyle="bold">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="@string/password"
        app:hintTextAppearance="@style/HintText"
        app:counterTextAppearance="@style/CounterText"
        android:textColorHint="@color/edit_text_login"
        app:counterEnabled="true"
        app:counterTextColor="@color/colorWhite"
        app:passwordToggleDrawable="@drawable/icon_selector"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorBlack"
        app:startIconDrawable="@drawable/ic_lock_black"
        app:startIconTint="@color/colorBlack">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/boder_edit_text"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:textStyle="bold">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="50dp"
        android:hint="@string/confirm_password"
        app:hintTextAppearance="@style/HintText"
        app:counterTextAppearance="@style/CounterText"
        android:textColorHint="@color/edit_text_login"
        app:counterEnabled="true"
        app:counterTextColor="@color/colorWhite"
        app:passwordToggleDrawable="@drawable/icon_selector"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorBlack"
        app:startIconDrawable="@drawable/ic_lock_black"
        app:startIconTint="@color/colorBlack">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/boder_edit_text"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:textStyle="bold">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/need_help"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/boder_button_login"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>